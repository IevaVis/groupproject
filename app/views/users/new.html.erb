
<div class="container">

  <div class="row">

    <div class="col-md-3"></div>

      <div class="login-form col-md-6">

        <h1 class="title">Sign Up Here</h1>

          <%= form_for @user do |form| %>

            <%= render partial: '/users/form', object: form %><br/>

               <div class="other-links">

                <%= link_to "/auth/google_oauth2", :class => "btn btn-outline-secondary btn-block" do %>
                 <i class="fab fa-google"></i> <%= "Sign up with Google" %>
                  <% end %>


                  <br/><p>Already have an account? <%= link_to t(".sign_in!"), sign_in_path %></p>

               </div>

           <% end %>

      </div>

    <div class="col-md-3"></div>

  </div>

</div>

