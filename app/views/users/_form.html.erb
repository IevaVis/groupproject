
<div class="form-group">
<%= form.hidden_field :role, value: params[:role] %>
</div>

<div class="form-group">
  <%= form.label :first_name, class: 'required' %>
  <%= form.text_field :first_name, type:'text', :class => "form-control", required: true, placeholder: "John" %>
</div>

<div class="form-group">
  <%= form.label :last_name, class: 'required' %>
  <%= form.text_field :last_name, type: 'text', :class => "form-control", required: true, placeholder: "Smith" %>
</div>

<% if params[:role] == "expert" || current_user&.expert? %>
<div class="form-group">
  <%= form.label :title, class: 'required' %>
  <%= form.text_field :title, type: 'text', :class => "form-control", required: true, placeholder: "Professor" %>
<% end %>

<div class="form-group">
  <%= form.label :email, class: 'required' %>
  <%= form.text_field :email, type: 'email', :class => "form-control", required: true, placeholder: "example@example.com" %>
</div>

<div class="form-group">
	<%= form.label :password, class: 'required' %>
  <%= form.password_field :password, type: 'password', :class => "form-control", required: true, placeholder: "......" %>
</div>


<div class="form-group">
	<%= form.label :about_me %>
  	<%= form.text_area :about_me, type: 'text', rows: 5, :class => "form-control", placeholder: "Share some information about yourself" %>
</div>

<div class="form-group">
    <label class="btn-file">
      Upload profile picture!
      <%= form.file_field :avatar, class: 'd-none file-upload' %>
    </label>
    <span id="file-upload-info"></span>
</div>


<div class="submit-field">
      <%= form.submit 'Submit', :class => "btn btn-primary btn-block" %>
</div>

