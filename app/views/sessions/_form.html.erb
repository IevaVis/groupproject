<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', :class => "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, type: 'password', :class => "form-control", required: true %>
  </div>

  <div class="submit-field">
    <%= form.submit :class => "btn btn-primary btn-block" %>
  </div>
<br/>
  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <p>Do not have an account yet? <%= link_to t(".sign_up!"), sign_up_path %></p>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path %>
  </div>
<% end %>


